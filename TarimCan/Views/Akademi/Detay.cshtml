@using TarimCan.Models

@model AkademiModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/DashboardTheme/assets/global/css/components-rounded.css" rel="stylesheet" />
<link href="~/DashboardTheme/assets/admin/pages/css/blog.css" rel="stylesheet" />
<link href="~/DashboardTheme/assets/admin/pages/css/news.css" rel="stylesheet" />

<style>
    .video-container {
        position: relative;
        padding-bottom: 56.25%; /* 16:9 */
        height: 0;
    }

        .video-container iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }
</style>

<div class="col-md-12">
    <div class="portlet light bordered minHeight">
        <div class="portlet-title">
            <div class="caption">
                <i class="icon-equalizer font-red-sunglo"></i>
                <span class="caption-subject font-red-sunglo bold uppercase">@Model.Baslik</span>
            </div>
        </div>

        <div class="portlet light">
            <div class="portlet-body">
                <div class="row">
                    <div class="col-md-12 blog-page">
                        <div class="row">
                            <div class="col-md-8 col-sm-8 article-block" id="pnlContent">
                                <div class="video-container">
                                    <iframe id="video" width="560" height="315" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                </div>
                                <span style="font-size:15px"><br /><b>AÇIKLAMA</b><br /><br /> @Model.Aciklama</span>
                            </div>
                            <!--end col-md-9-->
                            <div class="col-md-1">&nbsp;</div>
                            <div class="col-md-3 col-sm-4 blog-sidebar" style="margin-left:0px !important">
                                <h3 style="margin-top: 0px; margin-left:-18px !important">Diğer Videolar</h3>
                                <div class="top-news">

                                    @{
                                        List<AkademiModel> digerVideolar = ViewBag.DigerVideolar;

                                        foreach (var item in digerVideolar)
                                        {
                                            <div class="row">
                                                <div class="col-md-4 blog-img blog-tag-data" style="margin: 0px !important; padding:0 !important">
                                                    <img src="../../DashboardTheme/assets/admin/pages/media/gallery/image4.jpg" alt="" class="img-responsive" style="border-radius:5px;">
                                                </div>
                                                <div class="col-md-8 blog-article">
                                                    <a href="page_blog_item.html" style="padding: 0px !important; color: #5b9bd1; font-size:14px !important">
                                                        @if (item.Baslik.Length > 30)
                                                        {
                                                            @item.Baslik.Substring(0, 30)
                                                        }
                                                        else
                                                        {
                                                            @item.Baslik;
                                                        }
                                                    </a>
                                                    <a href="javascript:;" style="padding: 0px !important; color: #5b9bd1; font-size:14px !important; text-decoration:none; font-size:12px !important; color:black">
                                                        <i class="fa fa-calendar" style="float:left; overflow:hidden; margin-right:10px!important"></i>
                                                        @item.EklenmeTarihiFormatted
                                                    </a>
                                                    <a href="javascript:;" style="padding: 0px !important; color: #5b9bd1; font-size:14px !important; text-decoration:none; font-size:12px !important; color:black">
                                                        <i class="fa fa-comments" style="float:left; overflow:hidden; margin-right:10px!important"></i>
                                                        @item.GoruntulenmeSayisi Görüntülenme
                                                    </a>
                                                </div>
                                            </div>
                                        }
                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.AntiForgeryToken()
</div>

<script src="@Url.Content("~/DashboardTheme/assets/global/plugins/jquery.min.js")" type="text/javascript"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/imask/6.4.2/imask.min.js" integrity="sha512-l0grYOI8XZga5TajPOiqLrQVCKrdh+k0QSEtS+cpJlNeI8Nu9GOhsVaFyFQuPQfYp02GnhsyHqkPR7P7BTKYAQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-dateFormat/1.0/jquery.dateFormat.min.js" integrity="sha512-YKERjYviLQ2Pog20KZaG/TXt9OO0Xm5HE1m/OkAEBaKMcIbTH1AwHB4//r58kaUDh5b1BWwOZlnIeo0vOl1SEA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

<script>

    $(document).ready(function () {
        $("#video")[0].src = "//www.youtube.com/embed/" + '@Model.VideoLinki';
        $("#video").show();
    });

</script>

<script>
    $('#Akademi').addClass("active");
</script>
