@using TarimCan.Models

@model List<HayvanModel>

@{
    ViewBag.Title = "Toplu Tohumlama";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">

    <div class="portlet light bordered" style="min-height:620px">
        <div class="row">
            <div class="col-md-12" style="min-height:600px">
                <div class="portlet light" style="padding:0 !important; font-size:13px !important; margin:0px !important">
                    <div class="portlet-title" style="margin-bottom:0px !important">
                        <div class="caption">
                            <i class="icon-equalizer font-red-sunglo"></i>
                            <span class="caption-subject font-red-sunglo bold uppercase" style="font-size:15px">TOPLU HAYVAN TOHUMLAMA</span>
                            <a href="https://www.youtube.com/watch?v=Zm51mv885aI&t=83s" target="_blank"> <img src="~/DashboardTheme/assets/global/ana-icons/youtube-full-logo.png" style="height:20px" title="Yardım Videosu"></a>
                        </div>

                    </div>
                </div>
                <div class="portlet-body">

                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-md-3 control-label">İşlem Tarihi</label>
                            <div class="col-md-4">
                                <input type="date" class="form-control" placeholder="dd-mm-yyyy" id="IslemTarihi" autocomplete="off">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Baba Küpe No</label>
                            <div class="col-md-4">
                                <input type="text" class="form-control" placeholder="baba küpe no" id="BabaKupeNo">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">İşlem Ücreti</label>
                            <div class="col-md-4">
                                <input type="text" class="form-control" placeholder="işlem ücreti" id="TohumlamaFiyati" maxlength="5" onkeypress="return isNumeric(event)" oninput="maxLengthCheck(this)" onchange="IslemUcretiChanged()">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Açıklama</label>
                            <div class="col-md-4">
                                <textarea class="form-control" id="Aciklama" rows="4" cols="50"> </textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">&nbsp;</label>
                            <div class="col-md-4">
                                <button id="btnKaydet" type="submit" class="btn green" onclick="TopluTohumla()" style="width:100%">Toplu Hayvan Tohumla</button>
                            </div>
                        </div>
                    </div>

                    @{
                        if (Model.Count > 0)
                        {
                            <table class="table table-hover table-light">
                                <thead>
                                    <tr>
                                        <th style="text-align:center">&nbsp; </th>
                                        <th style="text-align:center">No</th>
                                        <th>Küpe No</th>
                                        <th>Adı</th>
                                        <th>Sürü Grubu</th>
                                        <th>Cinsiyeti</th>
                                        <th>Sürüye Giriş Tarihi</th>
                                        <th>Doğum Tarihi</th>
                                        <th>Son Tohumlanma Tarihi</th>
                                    </tr>
                                </thead>
                                <tbody id="tblHayvanResult">
                                    @{
                                        int sayacSos = 1;

                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td style="text-align:center"><input type="checkbox" id="@item.Id" name="chk" /></td>
                                                <td style="text-align:center">@Convert.ToInt32(sayacSos++).ToString()</td>
                                                <td>
                                                    @item.KupeNo
                                                </td>
                                                <td>
                                                    @item.Adi
                                                </td>
                                                <td>
                                                    @item.SuruGrubu
                                                </td>
                                                <td>
                                                    @item.Cinsiyet
                                                </td>
                                                <td>
                                                    @item.SuruyeGirisTarihi.ToString("dd.MM.yyyy")
                                                </td>
                                                <td>
                                                    @item.DogumTarihi.ToString("dd.MM.yyyy")
                                                </td>
                                                <td>
                                                    @item.TohumlanmaTarihiFormatted
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <span>Listelenecek hayvan bulunamadı...</span>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
    @Html.AntiForgeryToken()

    <div class="modal fade" id="basic" tabindex="-1" role="basic" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Tohumlama işlemi yapılıyor...</h4>
                </div>
                <div class="modal-body">

                    <table>
                        <tr>
                            <td>
                                <img src="~/DashboardTheme/assets/admin/layout4/img/loading.gif" style="width:50px; height:50px; margin-right:10px;" />
                            </td>
                            <td>
                                Tohumlama bilgisi kayıt ediliyor. Lütfen bekleyin...<br />Bu süreç internet bağlantınıza göre biraz uzun sürebilir.
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="@Url.Content("~/DashboardTheme/assets/global/plugins/jquery.min.js")" type="text/javascript"></script>

<script>

    function TopluTohumla() {

        var IslemTarihi = document.getElementById("IslemTarihi").value;

        if (IslemTarihi == "") {
            ShowErrorMessageBox("İşlem tarihi giriniz..."); return;
        }

        var Ids = [];

        var checkedBoxes = document.querySelectorAll('input[name=chk]:checked');
        for (const input of checkedBoxes) {
            Ids.push(input.id);
        }

        var dataObject = JSON.stringify(
        {
            'Ids': JSON.stringify(Ids)
        });


        if (Ids.length == 0) {
            ShowErrorMessageBox("Tohumlanacak hayvan seçiniz..."); return;
        }

        console.log(dataObject);

        bootbox.dialog({
            message: Ids.length + " adet seçili hayvan toplu tohumlanacak. Onaylıyor musunuz?",
            title: "Uyarı",
            buttons: {
                success: {
                    label: "Onaylıyorum",
                    className: "green",
                    callback: function () {

                        var checkedBoxes = document.querySelectorAll('input[name=chk]:checked');

                        $('#basic').modal({ backdrop: 'static', keyboard: false })
                        for (const input of checkedBoxes) {
                            //Ids.push(input.id);

                            var data = {
                                __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val(),
                                'HayvanId': input.id,
                                'DurumBilgisiId': 4,
                                'IslemTarihi': document.getElementById("IslemTarihi").value,
                                'IslemUcreti': document.getElementById("TohumlamaFiyati").value.replace('.', '').replace(' TL', ''),
                                'BabaKupeNo': document.getElementById("BabaKupeNo").value,
                                'Aciklama': document.getElementById("Aciklama").value
                            };

                            console.log("data", JSON.stringify(data));

                            $.ajax({
                                type: "POST",
                                url: '@Url.Action("TohumlamaKaydetAction", "Hayvanlar")',
                                data: data,
                                success: function (response) {
                                }
                            });
                        }

                        $("#basic").removeClass("fade").modal("hide");

                        bootbox.dialog({
                            message: "Toplu tohumlama işlemi tamamlandı",
                            title: "Uyarı",
                            buttons: {
                                success: {
                                    label: "Tamam",
                                    className: "green",
                                    callback: function () {
                                        location.href = "/Hayvanlar/Index"
                                    }
                                }
                            }
                        })
                    }
                },
                error: {
                    label: "İptal Et",
                    className: "red",
                    callback: function () {
                        return;
                    }
                }
            }
        });

    }
</script>

<script>

    function IslemUcretiChanged() {
        document.getElementById("TohumlamaFiyati").value = formatMoney(document.getElementById("TohumlamaFiyati").value) + ' TL';
    }

    function maxLengthCheck(object) {
        if (object.value.length > object.maxLength)
            object.value = object.value.slice(0, object.maxLength)
    }

    function isNumeric(evt) {
        var theEvent = evt || window.event;
        var key = theEvent.keyCode || theEvent.which;
        key = String.fromCharCode(key);
        var regex = /[0-9]|\./;
        if (!regex.test(key)) {
            theEvent.returnValue = false;
            if (theEvent.preventDefault) theEvent.preventDefault();
        }
    }

    function formatMoney(price) {
        var currency_symbol = "₺"
        var formattedOutput = new Intl.NumberFormat('tr-TR', {
            style: 'currency',
            currency: 'TRY',
            minimumFractionDigits: 0,
        });
        return formattedOutput.format(price).replace(currency_symbol, '')
    }

</script>



<script>
    $('#topluIslemler').addClass("open");
    $('#topluIslemlerArrow').addClass("open");
    $('#topluIslemlerSubMenu').css("display", "block");
    $('#subMenuTopluTohumlama').addClass("active");
</script>
