@using TarimCan.Models

@model List<DurumBilgisiModel>

@{
    ViewBag.Title = "Hayvan Sağlık Karnesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">

    <div class="portlet light bordered" style="min-height:705px">
        <div class="portlet-title" style="margin-bottom:0px !important">
            <div class="caption">
                <i class="icon-equalizer font-red-sunglo"></i>
                <span class="caption-subject font-red-sunglo bold uppercase" style="font-size:15px">HAYVAN SAĞLIK KARNESİ</span>
            </div>

        </div>


        <div class="portlet-body">
            <div id="pnlHayvanBilgiLoading" style="width:100%; height:250px; text-align:center; display:none">
                <img src="~/DashboardTheme/assets/admin/layout4/img/app_loading.gif" width="75" height="75" />
            </div>

            <div class="col-md-8" style="margin: 0 !important; padding: 0 !important">
                <table class="table table-hover table-light">
                    <tbody>
                        <tr>
                            <td width="20%" style="font-weight:bold"> Küpe No: </td>
                            <td width="20%" id="dtyAdi"> @ViewBag.KupeNo </td>
                            <td width="20%" style="font-weight:bold"> Adı / Takip Numarası: </td>
                            <td width="30%" id="dtyKupeNo"> @ViewBag.Adi </td>
                        </tr>
                        <tr>
                            <td width="20%" style="font-weight:bold"> Irkı: </td>
                            <td width="30%" id="dtyKupeNo"> @ViewBag.Irk </td>
                            <td width="20%" style="font-weight:bold"> Doğum Tarihi: </td>
                            <td width="20%" id="dtyAdi"> @ViewBag.DogumTarihi </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="portlet-body">
            <div id="pnlHayvanBilgiLoading" style="width:100%; height:250px; text-align:center; display:none">
                <img src="~/DashboardTheme/assets/admin/layout4/img/app_loading.gif" width="75" height="75" />
            </div>

            <div class="col-md-8" style="margin: 0 !important; padding: 0 !important">
                <table class="table table-hover table-light">
                    <tr role="row" class="heading">
                        <th width="5%" tabindex="0" rowspan="1" colspan="1" style="text-align:center">
                            &nbsp;
                        </th>
                        <th width="15%" tabindex="0" rowspan="1" colspan="1">
                            Durum Bilgisi
                        </th>
                        <th width="15%" tabindex="0" rowspan="1" colspan="1">
                            İşlem Tarihi
                        </th>
                        <th width="15%" tabindex="0" rowspan="1" colspan="1">
                            Sonlanma Tarihi
                        </th>
                        <th width="45%" tabindex="0" rowspan="1" colspan="1">
                            Açıklama
                        </th>
                    </tr>
                    <tbody>

                        @{
                            if (Model.Count > 0)
                            {
                                int sayac = 1;

                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td style="text-align:center">@Convert.ToInt32(sayac++).ToString()</td>
                                        <td width="15%"> @item.DurumBilgisi</td>
                                        <td width="15%"> @item.IslemTarihi.ToString("dd.MM.yyyy")</td>
                                        <td width="15%"> @item.IslemSonlanmaTarihi.ToString("dd.MM.yyyy")</td>
                                        <td width="55%"> @item.Aciklama </td>
                                    </tr>
                                }

                            }
                            else
                            {
                                <tr>
                                    <td colspan="4">Durum Bilgisi Bulunamadı...</td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>


<script src="@Url.Content("~/DashboardTheme/assets/global/plugins/jquery.min.js")" type="text/javascript"></script>
<script>
    $('#HayvanYonetimi').addClass("active");
</script>
