@using TarimCan.Models

@model MakinaEkipmanModel

@{
    ViewBag.Title = "MAKİNA TEÇHİZAT GÜNCELLE";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">
    <div class="portlet light bordered" style=" min-height: 705px;">
        <div class="portlet-title">
            <div class="caption">
                <i class="icon-equalizer font-green-sharp"></i>
                <span class="caption-subject font-green-sharp bold uppercase">MAKİNA EKİPMAN GÜNCELLE</span> -
                <a href="https://www.youtube.com/watch?v=Zm51mv885aI&t=83s" target="_blank"> <img src="~/DashboardTheme/assets/global/ana-icons/youtube-full-logo.png" style="height:20px" title="Yardım Videosu"></a>
            </div>
        </div>

        <div class="portlet-body form">
            <!-- BEGIN FORM-->
            <div class="form-horizontal">
                @{
                    if (Model == null)
                    {
                        <span>
                            Makina Ekipman bulunamadı...
                        </span>
                    }
                    else
                    {
                        <div class="form-group">
                            <label class="col-md-3 control-label">Ekipman Tipi</label>
                            <div class="col-md-4">
                                @Html.DropDownList("DemirbasTipi", new SelectList(ViewBag.DemirbasTipi, "Value", "Text"), "Seçiniz", new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Bulunduğu Yer</label>
                            <div class="col-md-4">
                                <div class="input-group" id="defaultrange">
                                    @Html.DropDownList("DemirbasYeri", new SelectList(ViewBag.DemirbasYerleri, "Value", "Text"), "Seçiniz", new { @class = "form-control" })
                                    <span class="input-group-btn">
                                        <a class="btn default date-range-toggle" data-toggle="modal" href="#basic">
                                            <i class="fa fa-plus"></i>
                                        </a>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="modal fade" id="basic" tabindex="-1" role="basic" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                                        <h4 class="modal-title">Alan Ekle</h4>
                                    </div>
                                    <div class="modal-body">

                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Alan Adı: </label>
                                            <div class="col-md-9">
                                                <input type="text" class="form-control" placeholder="makina teçhizatın bulunduğu yer" id="DemirbasYeri" maxlength="10" autocomplete="off">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn default" data-dismiss="modal">İptal</button>
                                        <button type="button" class="btn blue" onclick="DemirbasYeriKaydet()">Kaydet</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Seri Numarası</label>
                            <div class="col-md-4">
                                <input type="text" class="form-control" placeholder="seri numarası" id="SeriNumarasi" maxlength="50" autocomplete="off" value="@Model.SeriNumarasi">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Markası</label>
                            <div class="col-md-2">
                                <input type="text" class="form-control" placeholder="markası" id="Markasi" maxlength="50" autocomplete="off" value="@Model.Markasi">
                            </div>
                            <div class="col-md-2">
                                <input type="text" class="form-control" placeholder="modeli" id="Modeli" maxlength="50" autocomplete="off" value="@Model.Modeli">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Satın Alınan Yıl</label>
                            <div class="col-md-2">
                                <input type="number" class="form-control" placeholder="satın alınan yıl" id="SatinAlinanYil" maxlength="50" autocomplete="off" value="@Model.SatinAlinanYil">
                            </div>
                            <div class="col-md-2">
                                <input type="number" class="form-control" placeholder="satın alma bedeli" id="SatinAlmaBedeli" maxlength="50" autocomplete="off" value="@Model.SatinAlmaBedeli.ToString().Replace(",",".")">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Fatura No ve Tarihi</label>
                            <div class="col-md-2">
                                <input type="text" class="form-control" placeholder="fatura no" id="FaturaNo" maxlength="50" autocomplete="off" value="@Model.FaturaNo">
                            </div>
                            <div class="col-md-2">
                                @if (Model.FaturaTarihi != null)
                                {
                                    <input type="date" class="form-control" id="FaturaTarihi" maxlength="50" autocomplete="off" value="@Model.FaturaTarihi.Value.ToString("yyyy-MM-dd")">
                                }
                                else
                                {
                                    <input type="date" class="form-control" id="FaturaTarihi" maxlength="50" autocomplete="off">
                                }
                            </div>
                        </div><div class="form-group">
                            <label class="col-md-3 control-label">Periyodik Bakım Gerekli Mi ?</label>
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="PeriyodikBakimGerekiyorMu" id="flexRadioDefault1" onclick="PeriyodikBakimGerektiriyorMuChanged(this);" value="true">
                                    <label class="form-check-label" for="flexRadioDefault1">
                                        Evet
                                    </label>
                                    <input class="form-check-input" type="radio" name="PeriyodikBakimGerekiyorMu" id="flexRadioDefault2" onclick="PeriyodikBakimGerektiriyorMuChanged(this);" value="false">
                                    <label class="form-check-label" for="flexRadioDefault2">
                                        Hayır
                                    </label>
                                </div>
                            </div>
                        </div>

                        string display = "none";
                        if (Model.PeriyodikBakimGerekiyorMu)
                        {
                            display = "block";
                        }

                        <div id="pnlSonBakimYapildigiTarih" style="display:@display">
                            <div class="form-group">
                                <label class="col-md-3 control-label">Bakım Periyodu (Ay)</label>
                                <div class="col-md-4">
                                    <input type="number" class="form-control" placeholder="bakım periyodu" id="BakimPeriyoduAy" maxlength="50" autocomplete="off" value="@Model.BakimPeriyoduAy">
                                </div>
                            </div>


                            <div class="form-group">
                                <label class="col-md-3 control-label">Son Bakım Yapıldığı Tarih</label>
                                <div class="col-md-4">
                                    @if (Model.SonBakimYapildigiTarih != null)
                                    {
                                        <input type="date" class="form-control" id="SonBakimYapildigiTarih" maxlength="50" autocomplete="off" value="@Model.SonBakimYapildigiTarih.Value.ToString("yyyy-MM-dd")">
                                    }
                                    else
                                    {
                                        <input type="date" class="form-control" id="SonBakimYapildigiTarih" maxlength="50" autocomplete="off">
                                    }
                                </div>
                            </div>

                        </div>



                        <div class="form-group">
                            <label class="col-md-3 control-label">Açıklama</label>
                            <div class="col-md-4">
                                <textarea class="form-control" id="Aciklama" rows="3">@Model.Aciklama</textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">&nbsp;</label>
                            <div class="col-md-4">
                                <button id="btnSosYardOde" type="submit" class="btn green" onclick="MakinaEkipmanGuncelle(true)" style="width:100%">Güncelle</button>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">&nbsp;</label>
                            <div class="col-md-4">
                                <button id="btnSosYardOde" type="submit" class="btn red" onclick="MakinaEkipmanSil(false)" style="width:100%">Makina Ekipmanı Sil</button>
                            </div>
                        </div>
                    }
                }

            </div>
        </div>
    </div>
    @Html.AntiForgeryToken()
</div>

<script src="@Url.Content("~/DashboardTheme/assets/global/plugins/jquery.min.js")" type="text/javascript"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/imask/6.4.2/imask.min.js" integrity="sha512-l0grYOI8XZga5TajPOiqLrQVCKrdh+k0QSEtS+cpJlNeI8Nu9GOhsVaFyFQuPQfYp02GnhsyHqkPR7P7BTKYAQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-dateFormat/1.0/jquery.dateFormat.min.js" integrity="sha512-YKERjYviLQ2Pog20KZaG/TXt9OO0Xm5HE1m/OkAEBaKMcIbTH1AwHB4//r58kaUDh5b1BWwOZlnIeo0vOl1SEA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

<script>

    $(document).ready(function () {

        if (@ViewBag.MakinaEkipmanId != 0) {

            MakinaEkipmanId = @ViewBag.MakinaEkipmanId;
            $('#DemirbasYeri').val('@Model.YerId');
            $('#DemirbasTipi').val('@Model.TipId');

            if ('@Model.PeriyodikBakimGerekiyorMu' == 'True') {
                document.getElementById("flexRadioDefault1").checked = true;
            }
            else {
                document.getElementById("flexRadioDefault2").checked = true;
            }
        }

    });

    function MakinaEkipmanGuncelle(aktifMi) {

        if (document.getElementById("DemirbasTipi").value == "") {
            ShowInfoFunctionBox("Makina Ekipman tipini seçiniz...");
            return;
        }

        if (document.getElementById("DemirbasYeri").value == "") {
            ShowInfoFunctionBox("Makina Ekipmanın bulunduğu yeri seçiniz...");
            return;
        }

        if (document.getElementById("Markasi").value == "" || document.getElementById("Modeli").value == "" ) {
            ShowInfoFunctionBox("Marka model giriniz...");
            return;
        }

        if (document.getElementsByName("PeriyodikBakimGerekiyorMu").value == 1 && document.getElementById("BakimPeriyoduAy").value == "") {
            ShowInfoFunctionBox("Bakım periyodunu giriniz...");
            return;
        }

        var dataObject = (
        {
            __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val(),
            'MakinaEkipmanId': @ViewBag.MakinaEkipmanId,
            'TipId': document.getElementById("DemirbasTipi").value,
            'YerId': document.getElementById("DemirbasYeri").value,
            'Markasi': document.getElementById("Markasi").value,
            'Modeli': document.getElementById("Modeli").value,
            'SeriNumarasi': document.getElementById("SeriNumarasi").value,
            'SatinAlinanYil': document.getElementById("SatinAlinanYil").value,
            'SatinAlmaBedeli': document.getElementById("SatinAlmaBedeli").value,
            'FaturaNo': document.getElementById("FaturaNo").value,
            'FaturaTarihi': document.getElementById("FaturaTarihi").value,
            'PeriyodikBakimGerekiyorMu': document.querySelector('input[name="PeriyodikBakimGerekiyorMu"]:checked').value,
            'BakimPeriyoduAy': document.getElementById("BakimPeriyoduAy").value,
            'SonBakimYapildigiTarih': document.getElementById("SonBakimYapildigiTarih").value,
            'Aciklama': document.getElementById("Aciklama").value,
            'AktifMi': aktifMi
        });

        console.log(JSON.stringify(dataObject));

        $.ajax({
            type: "POST",
            url: '@Url.Action("MakinaEkipmanGuncelleAction", "MakinaEkipman")',
            data: dataObject,
            success: function (response) {
                if (response.IsSuccess) {

                    var dialogMessage = "";

                    if (aktifMi == true) {
                        dialogMessage = "Makina ekipman güncellendi.";
                    }
                    else {
                        dialogMessage = "Makina ekipman silindi.";
                    }

                    bootbox.dialog({
                        message: dialogMessage,
                        title: "İşlem başarılı",
                        buttons: {
                            success: {
                                label: "Tamam",
                                className: "green",
                                callback: function () {
                                    if (aktifMi == true) {
                                        location.reload();
                                    }
                                    else {
                                        location.href = "/MakinaEkipman/MakinaEkipmanEkle";
                                    }
                                }
                            }
                        }
                    });
                }
                else {
                    if (response.MessageCode != -1) {
                        ShowInfoFunctionBox(response.Message);
                    }
                    else {
                        console.log(response.Message);
                    }
                }
            }
        });
    }

    function DemirbasYeriKaydet() {

        if (document.getElementById("DemirbasYeri").value == "") {
            ShowInfoFunctionBox("Demirbaş yeri giriniz...");
            return;
        }

        var DemirbasYeri = document.getElementById("DemirbasYeri").value;

        var dataObject = (
        {
            __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val(),
            'DemirbasYeri': DemirbasYeri
        });

        $.ajax({
            type: "POST",
            url: '@Url.Action("IsletmeDemirbasYeriKaydet", "Common")',
            data: dataObject,
            success: function (response) {
                //console.log("Response: " + JSON.stringify(response))
                if (response.ReturnValue == 1) {
                    $('#DemirbasYerleri').append(new Option(DemirbasYeri, response.ReturnMessage));
                    $('#DemirbasYerleri').val(response.ReturnMessage);
                    $('#basic').modal('hide');
                }
            }
        });
    }

    function MakinaEkipmanSil(value) {
        bootbox.dialog({
            message: "Makina ekipman silinecek. Bu işlem geri alınamaz. Onaylıyor musunuz?",
            title: "Kayıt başarılı",
            buttons: {
                success: {
                    label: "Evet Sil",
                    className: "red",
                    callback: function () {
                        MakinaEkipmanGuncelle(value);
                    }
                },
                cancel: {
                    label: "İptal",
                    className: "green",
                    callback: function () {
                        return;
                    }
                }
            }
        });
    }

    function PeriyodikBakimGerektiriyorMuChanged(radioButton) {

        console.log("radioButton: " + radioButton.value);

        if (radioButton.value == 'true') {
            document.getElementById("pnlSonBakimYapildigiTarih").style.display = 'block';
        }
        else {
            document.getElementById("pnlSonBakimYapildigiTarih").style.display = 'none';
        }
    }

</script>


<script>
    $('#MakinaEkipman').addClass("open");
    $('#MakinaEkipmanArrow').addClass("open");
    $('#MakinaEkipmanSubMenu').css("display", "block");
    $('#subMenuMakinaEkipmanEkle').addClass("active");
</script>