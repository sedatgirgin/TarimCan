    <script>


        $(document).ready(function () {
            document.body.style.backgroundColor = "white";
        });

        function Sorgula() {

            document.getElementById("dvSuccess").style.display = 'none';
            document.getElementById("dvError").style.display = 'none';

            var TCKimlikNo = document.getElementById("TCKimlikNo").value;

            console.log(document.getElementById("TCKimlikNo").lenght);
            console.log(TCKimlikNo);
            console.log(Object.keys(TCKimlikNo).length);

            if (TCKimlikNo == "") {
                ShowInfoFunctionBox("TC Kimlik Numaranızı Giriniz...");
                return;
            }

            if (Object.keys(TCKimlikNo).length != 11) {
                ShowInfoFunctionBox("TC Kimlik No 11 Karakter olmalıdır...");
                return;
            }

            var dataObject = (
            {
                __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val(),
                'TCKimlikNo': TCKimlikNo
            });

            $.ajax({
                type: "POST",
                url: '@Url.Action("TcKimlikNodanSinavSorgula", "GenelSinav")',
                data: dataObject,
                success: function (response) {
                    console.log(JSON.stringify(response));
                    if (response.IsSuccess) {
                        document.getElementById("dvSuccess").style.display = 'block';
                        document.getElementById("dvSuccessMessage").innerHTML = response.Message;
                    }
                    else {
                        document.getElementById("dvError").style.display = 'block';
                        document.getElementById("dvErrorMessage").innerHTML = response.Message;

                    }
                }
            });

        }

        function maxLengthCheck(object) {
            if (object.value.length > object.maxLength)
                object.value = object.value.slice(0, object.maxLength)
        }

        function isNumeric(evt) {
            var theEvent = evt || window.event;
            var key = theEvent.keyCode || theEvent.which;
            key = String.fromCharCode(key);
            var regex = /[0-9]|\./;
            if (!regex.test(key)) {
                theEvent.returnValue = false;
                if (theEvent.preventDefault) theEvent.preventDefault();
            }
        }

        function GoToProfile() {
            location.href = "/Profil/Index";
        }

        function LogOut() {
            location.href = "/Home/LogOut";
        }

