@using TarimCan.Models

@{
    ViewBag.Title = "Rasyon Oluştur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">

    <div class="portlet light bordered" style="min-height:770px">
        <div class="portlet-title">
            <div class="caption">
                <i class="icon-equalizer font-green-sharp"></i>
                <span class="caption-subject font-green-sharp bold uppercase">RASYON OLUŞTUR</span> -
                <a href="https://www.youtube.com/watch?v=Zm51mv885aI&t=83s" target="_blank"> <img src="~/DashboardTheme/assets/global/ana-icons/youtube-full-logo.png" style="height:20px" title="Yardım Videosu"></a>
            </div>
        </div>

        @{
            List<YemStoguModel> stok = ViewBag.YemStogu;

            if (stok.Count > 0)
            {
                <div class="portlet-body form">
                    <!-- BEGIN FORM-->
                    <div class="form-horizontal">
                        <div class="col-md-7">

                            <div class="form-group">
                                <label class="col-md-3 control-label">Rasyon Adı</label>
                                <div class="col-md-6">
                                    @if (ViewBag.RasyonAdi != null)
                                    {
                                        <input type="text" class="form-control" placeholder="rasyon adı" id="RasyonAdi" maxlength="50" autocomplete="off" value="@ViewBag.RasyonAdi" disabled>
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" placeholder="rasyon adı" id="RasyonAdi" maxlength="50" autocomplete="off">
                                    }
                                </div>
                            </div>

                            <table class="table table-hover table-light">
                                <tbody>
                                    <tr role="row" class="heading">
                                        <th width="5%" tabindex="0" rowspan="1" colspan="1">
                                            Sıra
                                        </th>
                                        <th width="15%" tabindex="0" rowspan="1" colspan="1">
                                            Yem Tipi
                                        </th>
                                        <th width="20%" tabindex="0" rowspan="1" colspan="1">
                                            Stoktaki Yemler
                                        </th>
                                        <th width="20%" tabindex="0" rowspan="1" colspan="1">
                                            Stok Miktarı Kg.
                                        </th>
                                        <th width="20%" tabindex="0" rowspan="1" colspan="1" style="text-align:center">
                                            Hayvan Başı Verilecek Yem Miktarı Kg.
                                        </th>
                                    </tr>
                                </tbody>
                                <tbody id="tblResult">
                                    @{

                                        int Sayac = 1;
                                        foreach (var item in stok)
                                        {
                                            <tr>
                                                <td>@Convert.ToInt32(Sayac++).ToString()</td>
                                                <td>
                                                    @item.YemTipi
                                                </td>
                                                <td>
                                                    @item.YemAdi
                                                </td>
                                                <td>
                                                    @item.StokMiktariKg.ToString("N0") kg
                                                </td>
                                                <td align="center">
                                                    @{
                                                        if (item.YemMiktariKg != 0)
                                                        {
                                                            string mYemId = @String.Format("{0}_{1}", item.YemId, item.YemTipId);
                                                            <input type="number" class="form-control" id="@mYemId" value="@item.YemMiktariKg.ToString().Replace(",",".")" />
                                                        }
                                                        else
                                                        {
                                                            string mYemId = @String.Format("{0}_{1}", item.YemId, item.YemTipId);
                                                            <input type="number" class="form-control" id="@mYemId" value="0" />
                                                        }
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="portlet-body form">
                    <!-- BEGIN FORM-->
                    <div class="form-horizontal">

                        <div class="form-group">
                            <label class="col-md-2 control-label">&nbsp;</label>
                            <div class="col-md-4">
                                <button id="btnSosYardOde" type="submit" class="btn green" onclick="StokEkle()" style="width:100%">Kaydet</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <span>Rasyon Bulunamadı...</span>
            }
        }

    </div>

    @Html.AntiForgeryToken()
</div>

<script src="@Url.Content("~/DashboardTheme/assets/global/plugins/jquery.min.js")" type="text/javascript"></script>

<script>

    var RasyonAdi;

    function StokEkle() {

        RasyonAdi = document.getElementById("RasyonAdi").value;
        let YemIdleri = [];
        const YemMiktarlari = [];

        if (RasyonAdi == "") {
            ShowInfoFunctionBox("Rasyon adınız giriniz...");
            return;
        }

        var inputs = document.getElementById('tblResult').getElementsByTagName('input');

        for (var i = 0; i < inputs.length; i++) {
            if (inputs[i].value != "") {
                console.log("YemId: " + inputs[i].id + " - InputVal: " + inputs[i].value);
                YemIdleri.push(inputs[i].id.replace("hayvanBasiYem_", ""));
                YemMiktarlari.push(inputs[i].value);
            }
        }

        var dataObject = (
        {
            __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val(),
            'RasyonId': '@ViewBag.RasyonId',
            'RasyonAdi': RasyonAdi,
            'YemIdleri': JSON.stringify(YemIdleri),
            'YemMiktarlari': JSON.stringify(YemMiktarlari)
        });

        console.log("dataObject: " + JSON.stringify(dataObject));

        var MethodName = "";
        if (@ViewBag.RasyonId == 0) {
            MethodName = "RasyonKaydetAction";
        }
        else {
            MethodName = "RasyonGuncelleAction";
        }
        console.log("MethodName: " + MethodName);

        $.ajax({
            type: "POST",
            url: '/Yem/' + MethodName,
            data: dataObject,
            success: function (response) {

                console.log(JSON.stringify(response));

                if (response.IsSuccess) {
                    bootbox.dialog({
                        title: "İşlem başarılı",
                        message: "İşlem Tamamlandı. Kayıt Başarılı.",
                        buttons: {
                            success: {
                                label: "Tamam",
                                className: "green",
                                callback: function () {
                                    //location.reload();
                                }
                            }
                        }
                    });
                }
                else {
                    if (response.MessageCode != -1) {
                        ShowInfoFunctionBox(response.Message);
                    }
                    else {
                        console.log(response.Message);
                    }
                }
            }
        });

    }

</script>

<script>

    function maxLengthCheck(object) {
        if (object.value.length > object.maxLength)
            object.value = object.value.slice(0, object.maxLength)
    }

    function isNumeric(evt) {
        var theEvent = evt || window.event;
        var key = theEvent.keyCode || theEvent.which;
        key = String.fromCharCode(key);
        var regex = /[0-9]|\./;
        if (!regex.test(key)) {
            theEvent.returnValue = false;
            if (theEvent.preventDefault) theEvent.preventDefault();
        }
    }

</script>

<script>
    $('#YemYonetimi').addClass("open");
    $('#YemYonetimiArrow').addClass("open");
    $('#yemYonetimiSubMenu').css("display", "block");
    $('#subMenuRasyonOlustur').addClass("active");
</script>
