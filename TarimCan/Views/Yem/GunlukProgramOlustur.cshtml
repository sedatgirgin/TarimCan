@using TarimCan.Models

@{
    ViewBag.Title = "Günlük Yemleme PRogramı Oluştur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">

    <div class="portlet light bordered" style="min-height:770px">
        <div class="portlet-title">
            <div class="caption">
                <i class="icon-equalizer font-green-sharp"></i>
                <span class="caption-subject font-green-sharp bold uppercase">GÜNLÜK YEMLEME PROGRAMI OLUŞTUR</span> -
                <a href="https://www.youtube.com/watch?v=Zm51mv885aI&t=83s" target="_blank"> <img src="~/DashboardTheme/assets/global/ana-icons/youtube-full-logo.png" style="height:20px" title="Yardım Videosu"></a>
            </div>
        </div>
        <div class="portlet-body form">
            <!-- BEGIN FORM-->
            <div class="form-horizontal">

                <div class="form-group">
                    <label class="col-md-2 control-label">Padok</label>
                    <div class="col-md-4">
                        @Html.DropDownList("Padoklar", new SelectList(ViewBag.Padoklar, "Value", "Text"), "Seçiniz", new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">Rasyon</label>
                    <div class="col-md-4">
                        @Html.DropDownList("Rasyonlar", new SelectList(ViewBag.Rasyonlar, "Value", "Text"), "Seçiniz", new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">&nbsp;</label>
                    <div class="col-md-4">
                        <button id="btnSosYardOde" type="submit" class="btn green" onclick="Kaydet()" style="width:100%">Rasyon Kaydet</button>
                    </div>
                </div>

            </div>
        </div>

        <div class="portlet-body form">
            <!-- BEGIN FORM-->
            <div class="form-horizontal">
                <div class="col-md-8">
                    <table class="table table-hover table-light">
                        <tbody>
                            <tr role="row" class="heading">
                                <th width="10%" tabindex="0" rowspan="1" colspan="1">
                                    Sıra
                                </th>
                                <th width="40%" tabindex="0" rowspan="1" colspan="1">
                                    Padok Adı
                                </th>
                                <th width="40%" tabindex="0" rowspan="1" colspan="1">
                                    Rasyon
                                </th>
                            </tr>
                        </tbody>
                        <tbody id="tblResult">
                            @{
                                List<PadokModel> stok = ViewBag.PadokRasyon;

                                if (stok.Count > 0)
                                {
                                    int Sayac = 1;
                                    foreach (var item in stok)
                                    {
                                        <tr>
                                            <td>@Convert.ToInt32(Sayac++).ToString()</td>
                                            <td>
                                                @item.PadokAdi
                                            </td>
                                            <td>
                                                @item.RasyonAdi
                                            </td>
                                        </tr>
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>

    @Html.AntiForgeryToken()
</div>

<script src="@Url.Content("~/DashboardTheme/assets/global/plugins/jquery.min.js")" type="text/javascript"></script>

<script>

    var RasyonAdi;

    function Kaydet() {

        var dataObject = (
        {
            __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val(),
            'RasyonId': document.getElementById("Padoklar").value,
            'PadokId': document.getElementById("Rasyonlar").value
        });

        console.log("dataObject: " + JSON.stringify(dataObject));

        $.ajax({
            type: "POST",
            url: '@Url.Action("RasyonPadokEslestirAction", "Yem")',
            data: dataObject,
            success: function (response) {
                if (response.IsSuccess) {
                    bootbox.dialog({
                        title: "İşlem başarılı",
                        message: "İşlem Tamamlandı. Kayıt Başarılı.",
                        buttons: {
                            success: {
                                label: "Tamam",
                                className: "green",
                                callback: function () {
                                    location.reload();
                                }
                            }
                        }
                    });
                }
                else {
                    if (response.MessageCode != -1) {
                        ShowInfoFunctionBox(response.Message);
                    }
                    else {
                        console.log(response.Message);
                    }
                }
            }
        });

    }

</script>

<script>
    $('#YemYonetimi').addClass("open");
    $('#YemYonetimiArrow').addClass("open");
    $('#yemYonetimiSubMenu').css("display", "block");
    $('#subMenuGunlukYemProgrami').addClass("active");
</script>